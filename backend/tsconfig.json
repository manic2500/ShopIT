{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext", // ‚Üê ES Module output
    "moduleResolution": "node", // Required for ES modules
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}